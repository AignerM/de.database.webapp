<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/materialize")
    <link rel="stylesheet" href="~/Content/materialize/css/materialize.css" type="text/css" />

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <nav>
        <div class="nav-wrapper black">
            <form action="./GetKunde" method="post"> 
                <div class="input-field">
                    <input id="customer" type="search" name="customer" value="">
                    <label class="label-icon" for="customer"><i class="material-icons">search</i></label>
                    <i class="material-icons">close</i>
                </div>
                <br />
                <button class="waves-effect waves-light black btn-large" type="submit" name="action">Suchen
                    <i class="material-icons right">send</i>
                </button>
            </form>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - cellent GmbH</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/materialize")
    @RenderSection("scripts", required: false)
</body>
</html>
